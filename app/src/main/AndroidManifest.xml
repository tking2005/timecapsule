<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.timecapsule.app">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-feature android:name="android.hardware.camera2.full" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key1" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />


        <activity android:name="com.timecapsule.app.loginactivity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.timecapsule.app.feedactivity.FeedActivity" />
        <activity android:name="com.timecapsule.app.cameraactivity.CameraActivity" />
        <activity android:name="com.timecapsule.app.GoogleMapsActivity" />
        <activity android:name="com.timecapsule.app.profilefragment.ProfileActivity"></activity>
        <activity android:name=".feedactivity.FeedActivity" />
        <activity
            android:name=".cameraactivity.CameraActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:screenOrientation="portrait" />

        <activity android:name=".GoogleMapsActivity" />
        <activity android:name=".profilefragment.ProfileActivity"></activity>
    </application>

</manifest>