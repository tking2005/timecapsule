<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_login_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#314362">

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@drawable/timecapsule_logo7" />
    </RelativeLayout>


    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_signin_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_login_signin"
            android:background="#F2F9FD"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/signin7"
            app:layout_heightPercent="17%"
            app:layout_widthPercent="50%" />

        <ImageView
            android:id="@+id/iv_login_signup"
            android:layout_toRightOf="@id/iv_login_signin"
            android:background="#F2F9FD"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/signup6_uc"
            app:layout_heightPercent="17%"
            app:layout_widthPercent="50%" />


    </android.support.percent.PercentRelativeLayout>


    <FrameLayout
        android:id="@+id/container_credentials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

</LinearLayout>